   "source": [
    "def solution(people,limit):\n",
    "    people.sort()\n",
    "    cnt=0\n",
    "    i,j=0,len(people)-1\n",
    "    while i<=j:\n",
    "        if people[i]+people[j]<=limit:\n",
    "            i+=1\n",
    "        j-=1 # 둘이 합쳐서 limit를 넘어가면 무거운 사람한테 보트를 준다.\n",
    "        cnt+=1 #보트개수 늘려주기\n",
    "    return cnt"
   ]
  }
